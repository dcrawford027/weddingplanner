@{
    ViewData["Title"] = "Register";
}
@model User

<div class="container pt-5">
    <div class="row">
        <div class="col-10">
            <h1>Register to Wedding Planner</h1>
        </div>
        <div class="col-2">
            <a asp-action="Login" class="text-right">Login</a>
        </div>
    </div>

    <form asp-action="Register" method="POST">
        <div class="row">
            <div class="form-group col-3">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
            </div>
            
            <div class="form-group col-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-3">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group col-3">
                <label asp-for="Confirm"></label>
                <input asp-for="Confirm" class="form-control">
                <span asp-validation-for="Confirm" class="text-danger font-weight-bold"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
            </div>
        </div>

        <div class="row">
            <button type="submit" class="btn btn-success ml-3">Sign Up Now</button>
        </div>
    </form>
</div>