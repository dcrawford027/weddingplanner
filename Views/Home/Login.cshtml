@{
    ViewData["Title"] = "Login";
}
@model LoginUser

<div class="container pt-5">
    <div class="row">
        <div class="col-10">
            <h1>Login to Wedding Planner</h1>
        </div>
        <div class="col-2">
            <a asp-action="Index" class="text-right">Register</a>
        </div>
    </div>

    <form asp-action="Login" method="POST">
        <div class="row">
            <div class="col-3">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger font-weigth-bold"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger font-weigth-bold"></span>
                </div>

                <button type="submit" class="btn btn-success">Login Now</button>
            </div>
        </div>
    </form>
</div>