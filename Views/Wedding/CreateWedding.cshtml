@{
    ViewData["Title"] = "Plan Wedding";
}
@model Wedding

<div class="container pt-5">
    <div class="row mb-5">
        <div class="col-md-8">
            <h1>Plan Your Wedding</h1>
        </div>

        <div class="col-md-2">
            <a asp-action="Dashboard" asp-controller="Wedding">Dashboard</a>
        </div>

        <div class="col-md-2">
            <a asp-action="Logout" asp-controller="Home">Log Out</a>
        </div>
    </div>

    <form asp-action="CreateWedding" asp-controller="Wedding">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="WedderOne"></label>
            </div>
            <div class="col-4">
                <input asp-for="WedderOne">
            </div>
            <span asp-validation-for="WedderOne" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="WedderTwo"></label>
            </div>
            <div class="col-4">
                <input asp-for="WedderTwo">
            </div>
            <span asp-validation-for="WedderTwo" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Date"></label>
            </div>
            <div class="col-4">
                <input asp-for="Date">
            </div>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Address"></label>
            </div>
            <div class="col-4">
                <input asp-for="Address">
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-4 offset-2">
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </div>
    </form>
</div>