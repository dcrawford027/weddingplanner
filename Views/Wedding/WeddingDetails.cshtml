@{
    ViewData["Title"] = "Wedding Details";
}
@model Wedding

<div class="container pt-5">
    <div class="row">
        <div class="col-md-8">
            <h1>@Model.WedderOne and @Model.WedderTwo's Wedding</h1>
        </div>

        <div class="col-md-2">
            <a asp-action="Dashboard" asp-controller="Wedding">Dashboard</a>
        </div>

        <div class="col-md-2">
            <a asp-action="Logout" asp-controller="Home">Log Out</a>
        </div>
    </div>

    <h2 class="p-5">Date: @Model.Date</h2>

    <div class="row">
        <div class="col">
            <ul class="list-group border-none">Guests:
                @foreach (var attending in Model.WeddingAttenders)
                {
                    <li>@attending.User.FirstName @attending.User.LastName</li>
                }
            </ul>
        </div>

        <div class="col">
            <iframe
                class="w-100"
                height="400px"
                frameborder="0" style="border:0"
                src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDiWNDJ2zrBl77ZN0inX1w9Pyvg5Gz4Ceo&q=@Model.Address" allowfullscreen>
            </iframe>
        </div>
    </div>
</div>